{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Worldwide Meat Consumption 2018",
  "width": 800,
  "height": 600,
  "data": {
    "url": "data/world.topojson",
    "format": {
      "type": "topojson",
      "feature": "world.topo"
    }
  },
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      }
    },
    {"transform": [
        {
          "lookup": "properties.adm0_a3",
          "from":{"data":{"url": "data/meat_consumption_worldwide.csv"},
            "key": "LOCATION"
          }
        },
        {"filter":{}}
      ],
      "mark": {"type": "geoshape"},
      "encoding":{
        "color": {
          "field":"Value",
          "type": "quantitative"
        }
      }
    }
  ]
}